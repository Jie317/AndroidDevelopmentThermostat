<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:background="@drawable/background"
                tools:context=".MainActivity">

    <TextView
            android:text="@string/hello_world"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold|italic"
            android:textSize="35sp"
            android:id="@+id/textView3"
            android:textColor="#512f84"
            android:textColorHighlight="#a31515" android:textIsSelectable="false"
            android:typeface="serif"
            android:textAlignment="center"
            android:layout_alignParentTop="true" android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp"/>

    <TextView
            android:text="@string/TreSalon"
            android:id="@+id/textView"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:gravity="center_horizontal"
            android:textStyle="bold"
            android:typeface="normal" android:textColor="#da1032"
            android:layout_below="@+id/textView3" android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" android:layout_marginTop="75dp"/>

    <TextView
            android:id="@+id/textView2"
            android:text="@string/TreCH1"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textSize="25sp"
            android:gravity="center_horizontal"
            android:textColor="#da1032" android:textStyle="bold" android:layout_alignTop="@+id/textView"
            android:layout_alignRight="@+id/textView3" android:layout_alignEnd="@+id/textView3"
            android:layout_marginRight="21dp" android:layout_marginEnd="21dp"/>

    <TextView
            android:id="@+id/treSalon"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/treSalon"
            android:layout_column="0"
            android:gravity="center_horizontal"
            style="@style/CustomFontStyle"
            android:textStyle="bold|italic" android:textColor="#da1032"
            android:layout_below="@+id/textView2" android:layout_alignRight="@+id/textView3"
            android:layout_alignEnd="@+id/textView3"/>

    <TextView
            android:id="@+id/treChambre1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/treChambre1"
            android:layout_column="1"
            android:gravity="center_horizontal"
            style="@style/CustomFontStyle"
            android:textStyle="bold|italic" android:textColor="#da1032"
            android:layout_alignTop="@+id/treSalon"
            android:layout_alignRight="@+id/textView"
            android:layout_alignEnd="@+id/textView"
            android:layout_alignLeft="@+id/textView" android:layout_alignStart="@+id/textView"/>
    <android.support.v7.widget.DialogTitle
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/view" android:layout_above="@+id/textView"
            android:layout_alignTop="@+id/textView2" android:layout_alignLeft="@+id/treChambre1"
            android:layout_alignStart="@+id/treChambre1"/>
    <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Actualiser"
            android:id="@+id/buttonC"
            android:layout_below="@+id/treChambre1" android:layout_alignRight="@+id/treChambre1"
            android:layout_alignEnd="@+id/treChambre1"/>
    <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Actualiser"
            android:id="@+id/buttonS"
            android:layout_below="@+id/treSalon" android:layout_alignRight="@+id/textView2"
            android:layout_alignEnd="@+id/textView2"/>


</RelativeLayout>
